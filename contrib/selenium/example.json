[
    {
        "name": "Test Personal Page",
        "url": "http://luizrabachini.com",
        "driver": "selenium",
        "browser": "firefox",
        "steps": [
            {
                "name": "Click in About",
                "element": {
                    "find_method": "xpath",
                    "find_value": "//*[@id=\"footer\"]/div/div/div/div/a[2]"
                },
                "action": "click",
                "wait_for": {
                    "find_method": "class_name",
                    "find_value": "img-profile",
                    "timeout": 3
                }
            },
            {
                "name": "Click in Labs",
                "element": {
                    "find_method": "xpath",
                    "find_value": "//*[@id=\"footer\"]/div/div/div/div/a[4]"
                },
                "action": "click",
                "wait": 2,
                "validators": [
                    {
                        "element": {
                            "find_method": "id",
                            "find_value": "repos"
                        }
                    }
                ]
            }
        ]
    }
]
